<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--默认开始位置-->
    <welcome-file-list>
        <welcome-file>/shop/pages/user/login.jsp</welcome-file>
    </welcome-file-list>
    <!--刚开始测试的-->
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>javaWeb.demo.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/myservlet</url-pattern>
    </servlet-mapping>
    <!--测试登录注册，后台验证-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>javaWeb.demo.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--配置初始化参数-->
    <servlet>
        <servlet-name>ServletConfig_Test</servlet-name>
        <servlet-class>javaWeb.demo.ServletConfig_Test</servlet-class>
        <init-param>
            <param-name>pageNum</param-name>
            <param-value>12</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletConfig_Test</servlet-name>
        <url-pattern>/servletConfig</url-pattern>
    </servlet-mapping>
    <!--测试servletContext-->
    <servlet>
        <servlet-name>ServletContext_Test</servlet-name>
        <servlet-class>javaWeb.demo.ServletContext_Test</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContext_Test</servlet-name>
        <url-pattern>/servletContext</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletContext_Test2</servlet-name>
        <servlet-class>javaWeb.demo.ServletContext_Test2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContext_Test2</servlet-name>
        <url-pattern>/servletContext2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletContext_Test3</servlet-name>
        <servlet-class>javaWeb.demo.ServletContext_Test3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContext_Test3</servlet-name>
        <url-pattern>/servletContext3</url-pattern>
    </servlet-mapping>

    <!--测试BeanUtils-->
    <servlet>
        <servlet-name>Servlet_BeanUtils</servlet-name>
        <servlet-class>javaWeb.demo.Servlet_BeanUtils</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet_BeanUtils</servlet-name>
        <url-pattern>/servlet_BeanUtils</url-pattern>
    </servlet-mapping>
    <!--shop项目的登录servlet-->
    <servlet>
        <servlet-name>Shop_LoginServlet</servlet-name>
        <servlet-class>javaWeb.shop.web.Shop_LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Shop_LoginServlet</servlet-name>
        <url-pattern>/shopLogin</url-pattern>
    </servlet-mapping>
    <!--shop项目的注册Servlet-->
    <servlet>
        <servlet-name>Shop_RegisterServlet</servlet-name>
        <servlet-class>javaWeb.shop.web.Shop_RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Shop_RegisterServlet</servlet-name>
        <url-pattern>/shopRegister</url-pattern>
    </servlet-mapping>

</web-app>